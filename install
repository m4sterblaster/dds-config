# Download ctags (taglist vim plugin dependency)
sudo apt-get install openjdk-7-jdk
sudo apt-get install vim
sudo apt-get install exuberant-ctags
#sudo apt-get install ctags
sudo apt-get install curl
sudo apt-get install maven2
sudo apt-get install ruby
sudo apt-get install rails
sudo apt-get install git
sudo apt-get install tmux

# set vim as default editor
sudo ln -sf /usr/bin/vim.basic /etc/alternatives/editor 

# configure git
echo "What is your github user name?"
read github_username
git config --global user.name $github_username
echo "What is your github user name?"
read github_email
git config --global user.email $github_email
# don't forget to cd ~/.ssh && ssh-keygen then paste the generated key to github!

# configure vim and stuff
cp -rf .vim ~/
cp .vimrc ~/
cp .rdebugrc ~/
cp .tmux.conf ~/
cp .NERDTreeBookmarks ~/
